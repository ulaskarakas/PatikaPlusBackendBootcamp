@model Author

<div class="card mb-3">
    <h5 class="card-header">Author Details</h5>
    <div class="card-body">
        <p><strong>Name Surname:</strong> @Model.FirstName @Model.LastName</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>

        <h5>Books</h5>
        @if (Model.Books.Any())
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>Publish Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model.Books)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Genre</td>
                            <td>@book.PublishDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>This author does not have any books yet.</p>
        }
    </div>
</div>

<a href="@Url.Action("List", "Author")" class="btn btn-secondary"><i class="bi bi-arrow-left"></i></a>
