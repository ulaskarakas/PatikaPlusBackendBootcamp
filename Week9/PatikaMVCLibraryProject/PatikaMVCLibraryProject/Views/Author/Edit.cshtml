@model AuthorEditViewModel

<div class="card mb-3">
    <h5 class="card-header">Edit Author</h5>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2">
                <label class="mb-1">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName" required />
            </div>
            <div class="form-group mb-2">
                <label class="mb-1">Last Name</label>
                <input type="text" class="form-control" asp-for="LastName" required />
            </div>
            <div class="form-group mb-3">
                <label class="mb-1">Date 0f Birth</label>
                <input type="date" class="form-control" asp-for="DateOfBirth" required />
            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-square"></i></button>
        </form>

    </div>
</div>

<a href="@Url.Action("List", "Author")" class="btn btn-secondary"><i class="bi bi-arrow-left"></i></a>
