@model BookEditViewModel

<div class="card mb-3">
    <h5 class="card-header">Edit Book</h5>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-2">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="Title" required />
            </div>
            <div class="form-group mb-2">
                <label>Genre</label>
                <input type="text" class="form-control" asp-for="Genre" required />
            </div>
            <div class="form-group mb-2">
                <label for="AuthorId">Author</label>
                <select class="form-select" asp-for="AuthorId" asp-items="ViewBag.Authors" required>
                    <option value="">Choose the Author...</option>
                </select>
            </div>
            <div class="form-group mb-2">
                <label>ISBN</label>
                <input type="text" class="form-control" asp-for="ISBN" required />
            </div>
            <div class="form-group mb-2">
                <label>Publish Date</label>
                <input type="date" class="form-control" asp-for="PublishDate" required />
            </div>
            <div class="form-group mb-3">
                <label>Copies Available</label>
                <input type="number" class="form-control" asp-for="CopiesAvailable" required />
            </div>
            <button type="submit" class="btn btn-warning"><i class="bi bi-pencil-square"></i></button>
        </form>
    </div>
</div>

<a href="@Url.Action("List", "Book")" class="btn btn-secondary"><i class="bi bi-arrow-left"></i></a>
